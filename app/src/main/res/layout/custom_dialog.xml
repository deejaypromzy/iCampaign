<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/fab_margin"
    app:cardCornerRadius="@dimen/fab_margin"
    app:contentPadding="@dimen/fab_margin"
    tools:context="ProceedDialog"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_location1"
                android:layout_width="match_parent"
                android:text="Pickup : "
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/pk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
<LinearLayout
            android:orientation="horizontal"
    android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableStart="@drawable/ic_location2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="Drop : "
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:drawableStart="@drawable/ic_location"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text="Approx. Distance : "
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/appdistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:gravity="end"
    android:layout_height="wrap_content">

    <TextView
        android:textAlignment="textEnd"
        android:layout_margin="@dimen/fab_margin"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:id="@+id/proceed"
        android:textSize="18sp"
        android:textColor="@color/bg_screen1"
        android:text="Cancel"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="textEnd"
        android:textStyle="bold"
        android:layout_margin="@dimen/fab_margin"
        android:layout_width="wrap_content"
        android:id="@+id/cancel"
        android:textSize="18sp"
        android:textColor="@color/dot_light_screen1"
        android:text="Proceed"
        android:layout_height="wrap_content"/>
</LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>