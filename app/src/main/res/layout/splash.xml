<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin"
    android:gravity="center"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    tools:context=".Splash"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mylogo1"
        android:layout_width="100dp"
        android:visibility="gone"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/log1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="200dp"
    android:id="@+id/mylogo"
    android:layout_height="200dp"
    app:civ_border_width="2dp"
    android:elevation="2dp"
    app:civ_border_color="#2196F3"
    android:src="@drawable/p1"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/dot_dark_screen3"
            android:textSize="@dimen/headerTextSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="20sp"
            android:textColor="@color/bg_screen1"
            android:text="Your No. 1 Choice"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mylogo2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:src="@drawable/log2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</LinearLayout>
